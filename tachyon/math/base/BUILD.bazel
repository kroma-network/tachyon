        "arithmetics_unittest.cc",
        "big_int_unittest.cc",
        "bit_iterator_unittest.cc",
        "groups_unittest.cc",
        "semigroups_unittest.cc",
        "sign_unittest.cc",
    ],
    deps = [
        ":big_int",
        ":bit_iterator",
        ":groups",
        ":sign",
        "//tachyon/base:random",
    ],
