        "//tachyon/math/base/gmp:gmp_util",
    ],
)

tachyon_cc_library(
    name = "bit_iterator",
    hdrs = ["bit_iterator.h"],
    deps = [":bit_traits"],
)

tachyon_cc_library(
    name = "bit_traits",
    hdrs = ["bit_traits.h"],
)

tachyon_cc_library(
    name = "conversions",
    hdrs = ["conversions.h"],
)

tachyon_cc_library(
    name = "field",
    hdrs = ["field.h"],
    deps = [":rings"],
)

tachyon_cc_library(
    name = "groups",
    hdrs = ["groups.h"],
    deps = [":semigroups"],
)

tachyon_cc_library(
    name = "identities",
    hdrs = ["identities.h"],
)

tachyon_cc_library(
    name = "rings",
    hdrs = ["rings.h"],
    deps = [
        ":groups",
        "//tachyon/base:template_util",
    ],
)

tachyon_cc_library(
    name = "semigroups",
    hdrs = ["semigroups.h"],
    deps = [
        ":big_int",
        ":bit_iterator",
        "@com_google_absl//absl/types:span",
    ],
