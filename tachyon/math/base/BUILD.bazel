tachyon_cc_library(
    name = "big_int",
    srcs = ["big_int.cc"],
    hdrs = ["big_int.h"],
    deps = [
        ":arithmetics",
        ":bit_traits",
        "//tachyon/base:macro_utils",
        "//tachyon/base/strings:string_util",
